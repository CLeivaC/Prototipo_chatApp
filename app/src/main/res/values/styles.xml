<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- Ajusta el radio según sea necesario -->
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item> <!-- Este valor define el radio de la esquina, 50% significa que la esquina será circular -->
    </style>

    <style name="RoundedImageViewOffOn">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilo para el modo claro -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <!-- Define aquí los atributos específicos del modo claro -->
    </style>

    <!-- Estilo para el modo oscuro -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Define aquí los atributos específicos del modo oscuro -->
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>