<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nuevo Contacto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#AAB2BD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#293241"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textColorHint="#AAB2BD"
            android:textColor="#AAB2BD"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/editTextApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:textColorHint="#AAB2BD"
            android:textColor="#AAB2BD"
            android:layout_marginTop="50dp"
            android:padding="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Teléfono -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewTelefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#293241"
        app:layout_constraintTop_toBottomOf="@+id/cardViewNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp">

        <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textColorHint="#AAB2BD"
            android:textColor="#AAB2BD"
            android:hint="Número de teléfono"
            android:padding="16dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Botón -->
    <Button
        android:id="@+id/botonGuardar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@+id/cardViewTelefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>