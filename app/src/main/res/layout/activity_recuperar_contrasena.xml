<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo de la pantalla -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/imagen_fondo_login"
        android:scaleType="centerCrop"/>

    <!-- Título -->
    <TextView
        android:id="@+id/title_recuperar_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restablecer Contraseña"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <!-- ImageView -->
    <ImageView
        android:id="@+id/icon_recuperar_contrasena"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/title_recuperar_contrasena"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/restablecer" />

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/icon_recuperar_contrasena"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/white">

        <!-- Contenedor principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Campo de teléfono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/selector_codigo_pais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="ES"
                    app:passwordToggleEnabled="true" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/R_et_telefono"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Teléfono"
                        android:inputType="phone"
                        android:maxLength="20"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Botón para enviar código SMS -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/R_Btn_enviar_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Enviar código SMS"
                android:backgroundTint="@color/blue_login"
                app:icon="@drawable/ic_sms"
                app:iconGravity="textStart" />

            <!-- Campo de código -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_et_codigo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Código"
                    android:maxLength="10"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Espacio en blanco -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Spinner de preguntas -->
            <Spinner
                android:id="@+id/R_spinner_preguntas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/pregunta"
                android:background="@drawable/spinner_background" />

            <!-- Campo de respuesta -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/R_et_respuesta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Respuesta"
                    android:maxLength="20"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón de confirmar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirmar"
                android:backgroundTint="@color/blue_login"
                app:icon="@drawable/ic_registro"
                app:iconGravity="textStart" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>